<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".professor.type_questions">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_80sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_155sdp"
            android:layout_height="@dimen/_150sdp"
            android:id="@+id/card_mcq"
            android:layout_marginTop="@dimen/_20sdp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="@dimen/_17sdp"
            card_view:cardElevation="3dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/mcq"
                android:layout_marginTop="-5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_mcq"
                    android:text="Multiple Choice \nQuestions"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_95sdp"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_155sdp"
            android:layout_height="@dimen/_150sdp"
            android:id="@+id/card_match"
            android:layout_marginTop="@dimen/_20sdp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="@dimen/_17sdp"
            card_view:cardElevation="3dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/mach"
                android:layout_marginTop="-5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_match"
                android:text="Match \nQuestions"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_95sdp"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_155sdp"
            android:layout_height="@dimen/_150sdp"
            android:id="@+id/card_complete"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="@dimen/_17sdp"
            card_view:cardElevation="3dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/bshow"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_complete"
                android:text="Complete \nQuestions"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_100sdp"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>