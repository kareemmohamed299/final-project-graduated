<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/compo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_122sdp"
        android:layout_height="@dimen/_130sdp"
        android:id="@+id/card_view_match1"
        android:layout_marginStart="10dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="17dp"
        card_view:cardElevation="1dp"
        card_view:contentPadding="3dp"
        android:foreground="?selectableItemBackground"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_93sdp"
            android:layout_margin="@dimen/_3sdp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qmatch_text"
                android:text="Q1"
                android:layout_centerInParent="true"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <EditText
            android:id="@+id/text_stuans"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:hint="ANS"
            android:textAlignment="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textColorHint="@color/offwhite"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:background="@drawable/back"
            android:elevation="1dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_122sdp"
        android:layout_height="@dimen/_130sdp"
        android:id="@+id/card_view_match2"
        android:layout_toEndOf="@+id/card_view_match1"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="17dp"
        card_view:cardElevation="1dp"
        card_view:contentPadding="3dp"
        android:foreground="?selectableItemBackground"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_93sdp"
            android:layout_margin="@dimen/_3sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amatch_text"
                android:text="A1"
                android:layout_centerInParent="true"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/qnum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/back"
            android:elevation="1dp"
            android:fontFamily="sans-serif-black"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>